@model IEnumerable<Hafazah.Model.Entities.Users.Instructor>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Resources.GetResource.T("ManageSheikhsMemberships")</h2>

@Html.ActionLink(@Resources.GetResource.T("CreateNew"), "Create", null, new { id = "ddl", @class = "next" })

<br />
<br />

<table class="table">
    <tr>
        <th>
            @Html.DisplayName(@Resources.GetResource.T("FirstName"))
        </th>

        <th>
            @Html.DisplayName(@Resources.GetResource.T("LastName"))
        </th>
        <th>
            @Html.DisplayName(@Resources.GetResource.T("Age"))
        </th>
        <th>
            @Html.DisplayName(@Resources.GetResource.T("PhoneNumber"))
        </th>
        <th>
            @Html.DisplayName(@Resources.GetResource.T("QuranMemorized"))
        </th>
        <th>
            @Html.DisplayName(@Resources.GetResource.T("ProgramType"))
        </th>
        <th>
            @Html.DisplayName(@Resources.GetResource.T("Actions"))
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Age)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.QuranMemorized)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.ProgramType)
            </td>



            <td>
                @Html.ActionLink(@Resources.GetResource.T("Edit"), "Edit", new { id = item.Id }) |
                @Html.ActionLink(@Resources.GetResource.T("Details"), "Details", new { id = item.Id }) |
                @Html.ActionLink(@Resources.GetResource.T("Delete"), "Delete", new { id = item.Id })
                @if (item.IsActive == false)
                {
                    @Html.ActionLink(@Resources.GetResource.T("Approve"), "Approve", new { id = item.Id }, new { @style = "color:green" })
                }
            </td>
        </tr>
    }

</table>
