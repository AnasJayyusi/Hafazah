     "اللغة العربية",
     ViewContext.RouteData.Values["action"].ToString(),
     new { culture = "ar" })
                                </div>
                            }







                        </section>
                    </div>
                </div>
            </div>
        </div>
    </div>

}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

