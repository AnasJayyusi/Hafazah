                                        @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = @Resources.GetResource.T("Password") })
                                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div>
